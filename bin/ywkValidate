#!/bin/bash

# FUNCTIONS_DEFINITION
COLOR_RESET="\\033[0m"
COLOR_YELLOW="\\033[33m"
COLOR_GREEN="\\033[32m"
COLOR_RED="\\033[31m"
COLOR_MAGENTA="\\033[35m"
COLOR_BOLD="\\e[1m"

packagesDir=$(getImpactedPackages)

packages=$(yarn -s workspaces info|jq 'keys[]'|sed -e 's/"//g')

for value in $packagesDir
do
	package=$([[ ${packages[*]} =~ "@kymdom/${value}" ]] && echo "@kymdom/${value}" || echo $value)
	echo -e "$COLOR_YELLOW----------------------------------- [$package]$COLOR_RESET"
	yarn workspace $package validate
	[ $? -ne 0 ] && echo -e "$COLOR_RED\n----------------------------------- [$package]$COLOR_RESET" && exit
	impacted="$impacted $package"
done;

PR_BODY=$(prDescGen);
echo "=============================="
echo
echo "$PR_BODY"
echo
echo "=============================="
echo
echo   $(git show --name-only --oneline | tail -n +2 | wc -l) files changed
echo
echo "https://github.com/kymono/kymdom/compare/$(git branch --show-current)?expand=1&body=$(echo "$PR_BODY"|jq -sRr '@uri')"

echo
